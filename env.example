# BlocPol Advanced Voting System - Environment Configuration

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Ethereum Network RPC URLs
ETHEREUM_MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETHEREUM_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETHEREUM_GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Polygon Network RPC URLs
POLYGON_MAINNET_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Arbitrum Network RPC URLs
ARBITRUM_MAINNET_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ARBITRUM_SEPOLIA_RPC_URL=https://arbitrum-sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# =============================================================================
# API KEYS
# =============================================================================

# Infura Project ID (for RPC access)
INFURA_PROJECT_ID=your_infura_project_id_here

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Polygonscan API Key (for contract verification)
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Arbiscan API Key (for contract verification)
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# CoinMarketCap API Key (for gas reporting)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# =============================================================================
# DEPLOYMENT KEYS
# =============================================================================

# Private key for contract deployment (NEVER commit this to version control!)
PRIVATE_KEY=your_private_key_here

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================

# IPFS Gateway URL
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# IPFS API URL (for uploading candidate profiles)
IPFS_API_URL=https://ipfs.infura.io:5001/api/v0

# IPFS Project ID (if using Infura IPFS)
IPFS_PROJECT_ID=your_ipfs_project_id_here

# IPFS Project Secret (if using Infura IPFS)
IPFS_PROJECT_SECRET=your_ipfs_project_secret_here

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend URL
FRONTEND_URL=http://localhost:3000

# API Base URL
API_BASE_URL=http://localhost:8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (for analytics and audit trails)
DATABASE_URL=postgresql://username:password@localhost:5432/blocpol

# Redis URL (for caching and session management)
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (for authentication)
JWT_SECRET=your_jwt_secret_here

# Session Secret (for session management)
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry DSN (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics ID
GA_TRACKING_ID=your_ga_tracking_id_here

# Mixpanel Token
MIXPANEL_TOKEN=your_mixpanel_token_here

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here

# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
NODE_ENV=development

# Debug Mode
DEBUG=true

# Gas Reporting
REPORT_GAS=true

# Test Network
TEST_NETWORK=localhost

# =============================================================================
# CONTRACT CONFIGURATION
# =============================================================================

# Minimum Voting Power
MIN_VOTING_POWER=100

# Maximum Voting Power
MAX_VOTING_POWER=10000

# Commitment Period (in seconds)
COMMITMENT_PERIOD=3600

# Reveal Period (in seconds)
REVEAL_PERIOD=1800

# ZK Proof Threshold
ZK_PROOF_THRESHOLD=3

# Maximum Delegation Depth
MAX_DELEGATION_DEPTH=5

# Minimum Delegation Power
MIN_DELEGATION_POWER=100

# Mixing Minimum Participants
MIXING_MIN_PARTICIPANTS=10

# Mixing Maximum Participants
MIXING_MAX_PARTICIPANTS=100

# Mixing Duration (in seconds)
MIXING_DURATION=3600

# Mixing Reveal Delay (in seconds)
MIXING_REVEAL_DELAY=1800

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable ZK Proofs
ENABLE_ZK_PROOFS=true

# Enable Liquid Democracy
ENABLE_LIQUID_DEMOCRACY=true

# Enable Vote Mixing
ENABLE_VOTE_MIXING=true

# Enable Ranked Choice Voting
ENABLE_RANKED_CHOICE=true

# Enable Real-time Analytics
ENABLE_REALTIME_ANALYTICS=true

# Enable Mobile App
ENABLE_MOBILE_APP=false

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Frequency (in hours)
BACKUP_FREQUENCY=24

# Backup Retention (in days)
BACKUP_RETENTION=30

# Backup Storage URL
BACKUP_STORAGE_URL=s3://your-backup-bucket/

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# Privacy Policy URL
PRIVACY_POLICY_URL=https://your-domain.com/privacy

# Terms of Service URL
TERMS_OF_SERVICE_URL=https://your-domain.com/terms

# GDPR Compliance
GDPR_COMPLIANCE_ENABLED=true

# Data Retention Period (in days)
DATA_RETENTION_PERIOD=2555

# =============================================================================
# CUSTOMIZATION
# =============================================================================

# Application Name
APP_NAME=BlocPol Advanced

# Application Version
APP_VERSION=2.0.0

# Brand Color (hex)
BRAND_COLOR=#3B82F6

# Logo URL
LOGO_URL=https://your-domain.com/logo.png

# Favicon URL
FAVICON_URL=https://your-domain.com/favicon.ico

# =============================================================================
# NOTES
# =============================================================================

# IMPORTANT: 
# 1. Never commit this file with real values to version control
# 2. Keep your private keys secure and never share them
# 3. Use different API keys for development and production
# 4. Regularly rotate your secrets and API keys
# 5. Monitor your API usage to avoid rate limits
# 6. Set up proper backup and recovery procedures
# 7. Ensure GDPR compliance if operating in the EU
# 8. Conduct regular security audits
# 9. Keep all dependencies updated
# 10. Monitor gas costs and optimize contract interactions 